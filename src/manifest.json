{
  "manifest_version": 2,
  "name": "Translator",
  "version": "0.4.0",
  "description": "TODO: description",
  "homepage_url": "https://github.com/Resident234/translator-extention",
  "icons": {
    "128": "translation-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*"
      ],
      "js": ["translator.js"],
      "css": ["style.css"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true,
    "open_in_tab": true
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "storage",
    "webNavigation"
  ]
}
